# Server Configuration
NODE_ENV=development
PORT=3001
JWT_SECRET=your-super-secure-secret-key-change-this-in-production

# External API Configuration
EXTERNAL_API_BASE_URL=https://api.external-service.com
EXTERNAL_API_KEY=your-external-api-key
EXTERNAL_API_TIMEOUT=30000
EXTERNAL_API_RATE_LIMIT=100

# Cache Settings
CACHE_TTL=3600
CACHE_MAX_SIZE=1000
CACHE_REFRESH_INTERVAL=300

# Frontend URL
FRONTEND_URL=http://localhost:5173

# Email Service (Gmail)
EMAIL_SERVICE=gmail
EMAIL_USER=your-app@gmail.com
EMAIL_PASS=your-gmail-app-password
FROM_NAME=OpenGov DataHub
FROM_EMAIL=your-app@gmail.com

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:5173/auth/google/callback